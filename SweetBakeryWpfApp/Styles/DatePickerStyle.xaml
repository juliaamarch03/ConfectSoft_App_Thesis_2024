<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <!--DatePicker default style-->
    <Style x:Key="DatePickerDefaultStyle" TargetType="DatePicker">
        <Setter Property="Foreground" Value="{StaticResource plainTextColorGrey}"/>
        <Setter Property="SelectedDate" Value="{x:Static sys:DateTime.Now}"/>
        <Setter Property="BorderThickness" Value="0 0 0 1"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Width" Value="130"/>
        <Setter Property="Height" Value="30"/>
    </Style>
</ResourceDictionary>